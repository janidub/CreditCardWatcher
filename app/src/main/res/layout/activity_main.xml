<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity"
    android:background="@color/dark_blue">

    <LinearLayout
        android:id="@+id/linear_card_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <com.janidu.cardtextwatcher.CardImageView
            android:id="@+id/iv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_card"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/app_name" />

        <com.janidu.cardtextwatcher.CardNumberEditText
            android:id="@+id/et_cardNumber"
            style="@style/editTextStyleNoBackGround"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/number_hint" />

        <com.janidu.cardtextwatcher.CardExpDateEditText
        android:id="@+id/et_cardExpDate"
        style="@style/editTextStyleNoBackGround"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="@string/mm_yy"
        android:layout_weight="1"
            android:gravity="center"/>
     <com.janidu.cardtextwatcher.CardCVCEditText
         android:id="@+id/et_cardCvcNumber"
            style="@style/editTextStyleNoBackGround"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/cvc"
         android:gravity="center"
            android:layout_weight="1"
         android:layout_marginEnd="8dp"/>
    </LinearLayout>
        <CheckBox
            android:id="@+id/check_save_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="@string/save_this_card_for_future"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/linear_card_details"
            app:layout_constraintStart_toStartOf="@id/linear_card_details"
            app:layout_constraintEnd_toEndOf="@id/linear_card_details"/>

    <Button
        android:id="@+id/btn_add_card"
        style="@style/PrimaryButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/check_save_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>