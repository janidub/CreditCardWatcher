<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editTextStyleNoBackGround">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">@drawable/bg_click_effect</item>
        <item name="android:background">@drawable/bg_blue_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>